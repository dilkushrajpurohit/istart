<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>sCommerce | Home</title>
    <link rel="stylesheet" href="style.css">
</head>
<style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', sans-serif;
}

body {
    background: #f4f6f9;
}

/* Navbar */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 40px;
    background: #4b0082;
    color: white;
}

.nav-dashboard {
    padding: 8px 18px;
    background: white;
    color: #4b0082;
    border: none;
    border-radius: 5px;
    font-weight: bold;
    cursor: pointer;
}

/* Centered Small Form */
.form-wrapper {
    display: flex;
    justify-content: center;
    margin: 40px 0;
}

.form-section {
    width: 320px;
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
}

.form-section h3 {
    text-align: center;
    margin-bottom: 15px;
}

.form-section input,
.form-section textarea {
    width: 100%;
    padding: 8px;
    margin: 6px 0;
    border-radius: 5px;
    border: 1px solid #ccc;
    font-size: 13px;
}

.form-section textarea {
    resize: none;
    height: 60px;
}

.form-section button {
    width: 100%;
    padding: 8px;
    background: #4b0082;
    color: white;
    border: none;
    border-radius: 5px;
    margin-top: 8px;
    cursor: pointer;
}

/* Cards Section */
.cards-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 25px;
    padding-bottom: 40px;
}

/* College Card */
.college-card {
    width: 80%;
    height: 30%;
    background: white;
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 15px 25px;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
}

.college-card img {
    width: 160px;
    height: 110px;
    object-fit: cover;
    border-radius: 8px;
}

.card-info h3 {
    color: #4b0082;
    margin-bottom: 5px;
}

.card-info p {
    font-size: 14px;
    margin-bottom: 10px;
}

.card-info button {
    padding: 6px 14px;
    background: #4b0082;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

/* Responsive */
@media (max-width: 768px) {
    .college-card {
        flex-direction: column;
        text-align: center;
        height: auto;
    }

    .college-card img {
        width: 100%;
        height: 160px;
    }
}

</style>
<body>

    <!-- Navbar -->
    <nav class="navbar">
        <div class="logo">sCommerce</div>
     <a href="/profile/<%=id._id%>"><button class="nav-dashboard">Profile</button></a>
    </nav>

    <!-- Center Form -->
    <div class="form-wrapper">
        <form action="/create" method="post" enctype="multipart/form-data">
        <div class="form-section">
            <h3>Add College</h3>

            <input type="text" placeholder="name of college" name="name">
    <input type="text" placeholder="address of college" name="address">
    <input type="text" placeholder="about the college"name="about">
    <input type="text" placeholder="Aictc Id" name="Aictc">
    <input type="file" name="collegephoto" id="photocollege" >

            <button type="submit">Submit</button>
        </form>
        </div>
    </div>

    <!-- Cards Section -->
    <div class="cards-section">
 <% items.forEach(item => {%>
        <!-- Dummy Card -->
        <div class="college-card">
            <img src="<%= item.link %>" alt="College">
            <div class="card-info">
                <h3><%= item.name %></h3>
                 <p><strong>About:</strong> <%=item.desc%></p>
                <p><strong>Address:</strong><%=item.address%></p>
                <a href="/dashboard/<%=item.id%>"><button>Dashboard</button></a>
            </div>
        </div>

        <!-- Dummy Card -->
        

    </div>
  <% }) %>
</body>
</html>
